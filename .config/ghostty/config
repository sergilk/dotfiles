#appearance 
theme=tokyonight
#background-opacity=0.93
 
#window
window-theme=ghostty
#window-subtitle=working-directory
window-padding-y=10
window-padding-x=10
window-padding-color=background
 
#font
font-family = "JetBrainsMono Nerd Font Mono"
