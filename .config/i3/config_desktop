### vars
set $mod Mod4
set $terminal alacritty
set $browser zen-browser
set $explorer Thunar

### general
font pango:Noto Serif Bold 8
focus_follows_mouse no
bindsym button1 nop
gaps outer 0
gaps inner 0

### startup
exec --no-startup-id xrandr --output HDMI-0 --mode "1920x1080" --rate 144 --primary
exec --no-startup-id xrdb -merge ~/.Xresources
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id gnome-keyring-daemon --start --components=secrets

exec_always --no-startup-id setxkbmap -layout us,ua -option grp:alt_shift_toggle
exec_always --no-startup-id sh -c "killall dunst; dunst"
exec_always --no-startup-id sh -c "killall polybar; polybar"
exec_always --no-startup-id sh -c "killall picom; picom -b"

exec --no-startup-id nvidia-settings -a "DigitalVibrance=200"
exec --no-startup-id feh --bg-fill ~/dotfiles/default.png
exec --no-startup-id sh -c 'pgrep -x copyq >/dev/null || (copyq --start-server & (sleep 1 && copyq hide &))'
exec --no-startup-id flameshot

### focus
for_window [urgent="latest"] focus
no_focus [class="Dunst"]

### styling
for_window [all] title_window_icon padding 0px
for_window [all] border normal 1

                        #border   bg        text      indicator child_border
#client.focused
#client.unfocused
